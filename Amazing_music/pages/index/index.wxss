.topItem-header{
  overflow: hidden;
  font-size: 26rpx;
}
.topItem-name{
  float: left;
}
.topItem-area{
  float: right;
}
.topItem-list{
  padding-top: 40rpx;
  width: 90%;
  background-color: #fbfbfb;
  
}
.topItem-item{
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}
.topItem-list image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.topItem-item-name{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}