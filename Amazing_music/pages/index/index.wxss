/* 头部轮播图 */
.swiper-header-img{
  width: 100%;
  height: 200%;
}

/* 头部导航栏 */
.index-nav-container{
  display: flex;
  justify-content: space-around;
}
.index-nav-item{
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
}
.index-nav-container .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color:rgb(240, 19, 19);
  font-size: 48rpx;
  color: #fff;
  line-height: 100rpx;
  text-align: center;
  margin: 20rpx 0;
}
