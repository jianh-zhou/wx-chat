/* 音乐推荐导航栏结束 */
.recommend-music-list{
  display: flex;
  margin-top: 20rpx;
  height: 290rpx;
}
.recommend-music-item{
  margin-right: 20rpx;
  width: 200rpx;
}
.recommend-music-img image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
}
.recommend-music-title{
/* 单行文本溢出隐藏 */
/* 1 禁止文本换行
  white-space: nowrap;
2 溢出隐藏
  overflow: hidden;
3 文本溢出影藏显示省略号
  text-overflow: ellipsis; */


  height: 84rpx;
  /* 设置多行文本溢出隐藏
  /* 开启-webkir-box盒子模型 */
  display: -webkit-box;
  /*设置溢出隐藏的行数 */
  -webkit-line-clamp:2;
  /* 设置文本排列方向 */
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 30rpx; 
}

.index-swiper-topList{
  height: 470rpx;
  margin:0 20rpx;

}
