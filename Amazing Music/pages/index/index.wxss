/* 轮播图 */
.swiper-item-img{
  width: 100%;
  height: 200%;
}
/* 头部导航栏 */
.index-nav-container{
  display: flex;
  justify-content: space-around;
}

.index-nav-container .iconfont{
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  font-size: 48rpx;
  margin: 20rpx 0;
  background-color: rgb(240, 19, 19);
  text-align: center;
  line-height: 100rpx;
  color: white;
}
.index-nav-item{
  display: flex;
  flex-direction: column;
  flex: 1;
  align-items: center;
  font-size: 28rpx
  }

.index-recommend-container{
  padding: 0 20rpx;
}
/* 推荐歌曲头部导航栏 */
.recommend{
  overflow: hidden;
}

.recommend-music-list{
  display: flex;
  margin-top: 20rpx;
  height: 290rpx;
}
.recommend-music-item{
  width: 200rpx;
  margin-right: 20rpx;
  
}
.recommend-music-img image{
  width: 200rpx; 
  height: 200rpx;
  border-radius: 20rpx;
}
.recommend-music-title{
  height: 84rpx;
  overflow: hidden;
  /* 开启-webkit-box盒子模式 */
  display: -webkit-box;
  /* 设置行数 */
  -webkit-line-clamp:2;
  /* 设置文本排列方向 */
  -webkit-box-orient: vertical;
  font-size: 30rpx;
}

/* 歌曲top榜 */
.index-swiper-topList{
  height: 470rpx;
  padding: 20rpx;
}
.swiper-topItem-header{
  font-size: 28rpx;
  padding-bottom: 40rpx;
}
.topItem-item-item{
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
  background-color: #fbfbfb;
  width: 94%
}
.swiper-topItem-item image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  
}
.topItem-item-num{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}